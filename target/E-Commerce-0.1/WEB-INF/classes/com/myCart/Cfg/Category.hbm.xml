<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    <class name="com.mycompany.entity.Category" table="Category" dynamic-insert="true">
    <id name="category_id" column="category_id"><generator class="increment"></generator></id>
    <property name="category_title" column="category_title"></property>
    <property name="category_description" column="category_description"></property>
    </class>
    </hibernate-mapping>